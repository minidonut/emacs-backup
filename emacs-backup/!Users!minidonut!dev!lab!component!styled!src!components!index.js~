import React from "react";
import styled, { css } from "styled-components";
import { space, color, width, height } from "styled-system";
import * as R  from "ramda";

export const CSWH = css`
  ${space}
  ${color}
  ${width}
  ${height}
`;

export const Flex = styled.div`
  display: flex;
  ${CSWH}
`;

export const Text = styled.div`
  ${CSWH}
`.withComponent("p");

export const Base = (display) => () => styled.div`
  display: ${display};
`;

const hover = (prop, value) => (component) => styled(component)`
  :hover {
    ${prop}: ${value};
  }
`;

const withComponent = (tag) => (component) => component.withComponent(tag);
const flexDirection = (direction="row") => (component) => styled(component)`flex-direction: ${direction};`;
const alignItems = (align="flex-start") => (component) => styled(component)`align-items: ${align};`;
const justifyContent = (justification="flex-start") => (component) => styled(component)`justify-content: ${justification};`;

export const CenteredRow = R.compose(
  hover("color", "red"),
  withComponent("a"),
  flexDirection("row"),
  alignItems("center"),
  justifyContent("center"),
)(Flex);

export const Col = flexDirection("column")(Flex);
export const CenteredCol = alignItems("center")(Col);

export const BlockLink = styled.div`
  display: block;
`.withComponent("a");


