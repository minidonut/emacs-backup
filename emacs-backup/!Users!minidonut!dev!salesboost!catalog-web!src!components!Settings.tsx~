import React from "react";
import styled, { keyframes } from "styled-components";
import {
  Flex,
  Text,
  Box,
  Image,
  Icon,
  HyperLink,
} from "malta";

const fade = keyframes`
  0% {
    opacity: 0;
  }
  100% {
    opacity: 1;
  }
`;

const Overlay = styled.div<any>`
  background: rgba(22,27,72, 0.5);
  z-index: 9010;
  position: fixed;
  top: 0;
  left: 0;
  width: 100vw;
  height: 100vh;
  animation: ${fade} 1.15s ease-out ${props => props.closing ? "reverse" : "normal"} both;
`;

export class Settings extends React.Component<any, any> {
  state = {
    open: false,
    closing: false,
  }

  handleOpen = () => {
    this.setState({ open: true, closing: false });
  }

  handleClose = () => {
    this.setState({ ...this.state, closing: true });
    setTimeout(() => {
      this.setState({ open: false, closing: false });
    }, 1150);
  }

  render() {
    return (
      <>
        {this.state.open ? <Overlay onClick={this.handleClose} closing={this.state.closing} /> : null}
      </>
    );
  }
}
